<p id="notice"><%= notice %></p>

<h1>Laboratorios</h1>

<body>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Facultad</th>
      <th scope="col">Campus</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% if can? :manage, Laboratory %>
  <tbody>
    <% @laboratories.each do |laboratory| %>
      <tr>
        <td scope="row"><%= laboratory.nombre %></td>
        <td scope="row"><%= laboratory.facultad %></td>
        <td scope="row"><%= laboratory.campus %></td>
        <td scope="row"><%= link_to 'Mostrar', laboratory %></td>
        <td scope="row"><%= link_to 'Editar', edit_laboratory_path(laboratory) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Crear nuevo laboratorio', new_laboratory_path %>
<%else%>
<tbody>
    <tr>
      <td scope="row"><%= @laboratory.nombre %></td>
      <td scope="row"><%= @laboratory.facultad %></td>
      <td scope="row"><%= @laboratory.campus %></td>
      <td scope="row"><%= link_to 'Mostar', @laboratory %></td>
    </tr>
    </tbody>
</table>

<%end%>
</body>