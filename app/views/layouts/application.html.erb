<!DOCTYPE html>
<html>
  <head>
    <title>APPRegister</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light fixed-top">
  <div class="container-fluid">
  <a class="navbar-brand" href="/">REDLAB</a>
  <ul class="navbar-nav ml-auto">
    <li class="nav-item">
    <% if signed_in? %>
      <a class="nav-link" href="/records">Registros</a></li>
      <li class="nav-item">
      <a class="nav-link" href="/visits">Visitas</a></li>
       <li class="nav-item">
      <a class="nav-link" href="/students">Estudiantes</a></li>
       <li class="nav-item">
      <a class="nav-link" href="/students/new">Inscribir Estudiante</a></li>
      <% if can? :manage, Laboratory %>
      <a class="nav-link" href="/laboratories">Administrar Labs</a></li>
      <a class="nav-link" href="/admin/users">Administrar Usuarios</a></li>
      <% end %>
  <!-- Button Session-->
      <%= link_to "Cerrar Laboratorio", button_path, method: :get ,:class =>"btn navbar-btn btn-danger" %>
        <% else %>
          <%= link_to "Ingresar", new_user_session_path , :class =>"btn btn-outline-success" %>
       <% end %>
    </ul>  
</div>
</div>
  </nav> 
    <%= yield %>
  </body>
</html>
